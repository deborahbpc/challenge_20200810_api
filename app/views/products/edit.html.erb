
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h2 class="mb-4">Edit <%= @product.title %></h2>
        <div class="container d-flex justify-content-center">
          <%= simple_form_for @product do |f| %>
            <%= f.input :title %>
            <%= f.input :type %>
            <%= f.input :description %>
            <%= f.input :rating %>
            <%= f.input :price %>
            <%= f.input :photo %>
            <%= f.button :submit, "Editar", data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div> 
    </div>
  </div>
</div>