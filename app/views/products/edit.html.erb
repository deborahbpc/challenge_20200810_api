
<div class="container d-flex justify-content-center align-content-center align-items-center mt-5 mb-5" style="width: 700px;">
  <div class="side-info-box bg-light card-body shadow-sm r-border-card f-color">
    <div class="row justify-content-center ">
      <div class="m-3 col-lg-8 col-md-10 col-sm-10">
          <h2 class="mb-4">Edit <%= @product.title %></h2>
          <%= simple_form_for @product do |f| %>
            <%= f.input :title %>
            <%= f.input :type %>
            <%= f.input :description %>
            <%= f.input :rating %>
            <%= f.input :price %>
            <%= f.input :photo %>
            <%= f.button :submit, "Editar", data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div> 
    </div>
  </div>
</div>